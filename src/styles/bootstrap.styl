.c-btstrp
	&-clearing
		font-family Arial, Helvetica, monospace
		-webkit-text-size-adjust 100%
		-ms-text-size-adjust 100%
		box-sizing border-box
		margin 0
		padding 0
		display block
		max-width 100%
		background-color white
		overflow: auto; //убирает статическое масштабирование для экранов уже 376
		//overflow: hidden;//убирает белую полосу при смахивании влево уже 376

		a
			&:active, &:hover
				outline 0
				cursor pointer

		html, body
			width 100%
			display inline
		
	&-icon
		padding-right 5px
		vertical-align text-bottom

	&-container
		margin-left auto
		margin-right auto

		@media (min-width 375px)//375-30=355
			width 355px

		@media (min-width 768px)//768-60=708
			width 708px

		@media (min-width 992px)//992-60=932
			width 932px

		@media (min-width 1200px)//1200-60=1140
			width 1140px

	&-row
		@media (max-width 767px)
			padding-left 15px
			padding-right 15px

		@media (min-width 768px)
			padding-left 30px
			padding-right 30px

	&-link-clear, &-link-clear a
		text-decoration none

		&:hover, &:active
			text-decoration none

	&-btn
		display inline-block
		padding 6px 12px
		margin 5px
		font-size 14px
		font-weight 400
		line-height 1.42857143
		text-align center
		white-space nowrap
		vertical-align middle
		-ms-touch-action manipulation
		touch-action manipulation
		cursor pointer
		-webkit-user-select none
		-moz-user-select none
		-ms-user-select none
		user-select none
		background-image none
		border-width 1px
		border-left-style solid
		border-top-style solid
		border-right-style solid
		border-bottom-style solid
		border-color transparent
		border-radius 4px

		&:first-of-type {
			border-left-style solid
		}

		&-default
			color #333333
			background-color #FFFFFF
			border-color #CCCCCC

		&-stacked
			position relative
			display inline-block

			button
				border-left-style none
				border-radius 0
				margin 0
				float left

				&:first-child
					border-top-right-radius 0
					border-bottom-right-radius 0
					border-top-left-radius 4px
					border-bottom-left-radius 4px

				&:last-child
					border-top-right-radius 4px
					border-bottom-right-radius 4px
					border-top-left-radius 0
					border-bottom-left-radius 0

		p
			display inline

		a, button
			color inherit
			background-color inherit
			margin-top 5px
			text-decoration none
			&hover, &active
				text-decoration none
